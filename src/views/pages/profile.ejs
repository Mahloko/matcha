<body>

  <!-- EDIT PROFILE -->
  <header>
    <%- include('helpers/header'); -%>
  </header>
  <section id="profile">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <div class="card">
            <div class="card-header">
              <h4> Edit Profile</h4>
            </div>
            <div class="card-body">
              <form action="profile" method="POST">
                <div class="form-group">
                  <label>Username:</label>
                  <input type="text" name="username" id="username" autocomplete="username" placeholder="<%=username%>"
                    class="form-control" pattern="(?=.*[a-zA-Z]).{2,20}"
                    title="2-20 characters and atleast one alphabetic character">
                  <label>Firstname:</label>
                  <input type="text" name="firstname" id="firstname" autocomplete="name" placeholder="<%=firstname%>"
                    class="form-control" pattern="[A-Za-z -].{1,20}"
                    title="2-20 characters, only alphabet characters are allowed for firstname">
                  <label>Lastname:</label>
                  <input type="text" name="lastname" autocomplete="family-name" id="lastname"
                    placeholder="<%=lastname %>" class="form-control" pattern="[A-Za-z -].{1,20}"
                    title="2-20 characters, only alphabet characters are allowed for lastname">
                  <label>Email:</label>
                  <input type="email" name="email" autocomplete="email" id="email" placeholder="<%=email%>"
                    class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                    title="Something like 'user@mail.domain'. small caps only">
                  <label>Password:</label>
                  <input type="password" name="password" autocomplete="new-password" id="password"
                    placeholder="change password" class="form-control"
                    pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()_+-=]).{8,}"
                    title="8-20 characters, lower and upper case, number(s), special character(s) atleast">
                  <p>
                    <label>Confirm Password:</label>
                    <input type="password" name="confirm-password" autocomplete="new-password" id="confirm-password"
                      placeholder="confirm password" class="form-control"
                      pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()_+-=]).{8,}"
                      title="8-20 characters, lower and upper case, number(s), special character(s) atleast">
                  </p>
                  <p>
                    <label>Gender:</label>
                    <select name="gender" id="gender">
                      <option value="Bisexual">Bisexual</option>
                      <option value="Male">Male</option>
                      <option value="Female">Female</option>
                    </select>
                  </p>
                  <p>
                    <label>Ethnicity:</label>
                    <select name="ethnicity" id="ethnicity">
                      <option value="Black">Black</option>
                      <option value="Coloured">Coloured</option>
                      <option value="Indian">Indian</option>
                      <option value="White">White</option>
                      <option value="Other">Other</option>
                    </select>
                  </p>
                  <p>
                    <label>Sexual Partner Preference:</label>
                    <select name="Preference" id="Preference">
                      <option value="Bisexual">Bisexual</option>
                      <option value="Men">Men</option>
                      <option value="Women">Women</option>
                    </select>
                  </p>
                  <label>Age:</label>
                  <input type="number" name="age" id="age" placeholder="<%=age%>" class="form-control">
                  <div class="form-group">
                    <label>Bio</label>
                    <textarea class="form-control" name="bio" placeholder="tell us about yourself..."><%=bio%></textarea>
                  </div>
                  <p id="Interests">
                    <label>Interests:</label>
                  <p>
                    <label for="#bondage"><input name="interests" type="checkbox" value="#bondage">#bondage</label>
                    <label for="#canoing"><input name="interests" type="checkbox" value="#canoing">#canoing</label>
                    <label for="#skiing"><input name="interests" type="checkbox" value="#skiing">#skiing</label>
                    <label for="#bike_riding"><input name="interests" type="checkbox" value="#bike_riding">#bike_riding</label>
                    <label for="#hiking"><input name="interests" type="checkbox" value="#hiking">#hiking</label>
                    <label for="#rock_climbing"><input name="interests" type="checkbox" value="#rock_climbing">#rock_climbing</label>
                    <label for="#club_hopping"><input name="interests" type="checkbox" value="#club_hopping">#club_hopping</label>
                    <label for="#picnics"><input name="interests" type="checkbox" value="#picnics">#picnics</label>
                    <label for="#gaming"><input name="interests" type="checkbox" value="#gaming">#gaming</label>
                    <label for="#car_yacking"><input name="interests" type="checkbox" value="#car_yacking">#car_yacking</label>
                    <label for="#gym"><input name="interests" type="checkbox" value="#gym">#gym</label>
                    <label for="#book_club"><input name="interests" type="checkbox" value="#book_club">#book_club</label>
                    <label for="#music"><input name="interests" type="checkbox" value="#music">#music</label>
                  </p>
