<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Home</title>
  <%- include('helpers/head'); -%>
  <link href="/css/custom/home.css" rel="stylesheet" type="text/css">
</head>

<body>
  <!-- header -->
  <%- include('helpers/header'); -%>
    <div class="container">
        <div class="row">

            <div class="col-sm">
                <div class="card">
                    <div class="card-header">
                        <h4> Search </h4>
                    </div>
                    <form action="home" method="POST">
                        <p id="Interests">
                            <h5 class="search-label">Interests:</h5>
                        </p>
                         <p><label for="#skiing"><input name="interests" type="checkbox" value="#skiing">#skiing</label></p>
                        <p>
                            <h5 class="search-label">City:</h5>
                            <input type="text" name="city">
                        </p>
                        <p >
                            <h5 class="search-label">Age:</h5>
                            <div class="range-slider">
                                min age <input class="range-slider__range" name="min_age" type="range" value="20" min="18" max="98">
                                <span class="range-slider__value">20</span>
                            </div>

                            <div class="range-slider">
                               max age <input class="range-slider__range" name="max_age"type="range" value="25" min="19" max="100">
                                <span class="range-slider__value">25</span>
                            </div>
                        </p>

                        <p>
                            <h5 class="search-label">popularity:</h5>
                        </p>
                        <div class="range-slider">
                                min fame <input class="range-slider__range" name="min_fame" type="range" value="0" min="0" max="3">
                                <span class="range-slider__value">1</span>
                            </div>

                            <div class="range-slider">
                               max fame <input class="range-slider__range" name="max_fame"type="range" value="4" min="4" max="6">
                                <span class="range-slider__value">4</span>
                            </div>
                        <p><input class="btn btn-outline-secondary btn-large"type="submit" value="submit"></p>
                    </form>
                </div>
            </div>


            <div class="col-sm">
                <span class="sort-by">sort by:</span>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Handle</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%users.forEach(user => {%>
                        <tr onclick="window.location='/details?user=<%=user.username%>';">
                            <td><%=user.username%></td>
                            <td><%=user.lastname%></td>
                            <td><%=user.firstname%></td>
                        </tr>
                        <%})%>
                        </tbody>
                    </table>
                </div>
            </div>    
        </div>
    </div>
  <!-- footer -->
  <%- include('helpers/footer'); -%>
  <script src="js/custom/home.js" rel="text/js"></script>
</body>

</html>