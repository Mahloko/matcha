<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Home</title>
  <%- include('helpers/head'); -%>
  <link href="/css/custom/home.css" rel="stylesheet" type="text/css">
</head>

<body>
  <!-- header -->
  <%- include('helpers/header'); -%>
    <div class="container">
        <div class="row">

            <div class="col-sm">
                <div class="card">
                    <div class="card-header">
                        <h4> Search </h4>
                    </div>
                    <form action="home" method="POST">
                        <p id="Interests">
                            <label>Interests:</label>
                        </p>
                         <p><label for="#skiing"><input name="interests" type="checkbox" value="#skiing">#skiing</label></p>
                        <p>
                            <label>City:</label>
                            <input type="text" name="city">
                        </p>
                        <p>
                            <label>Age:</label>
                            <p>
                            min age <input type="range" name="min_age" min="17" max="99">
                            </p>
                            <p>
                            max age <input type="range" name="max_age" min="17" max="100">
                            </p>
                        </p>

                        <p>
                            <label>popularity:</label>
                        </p>
                        <p>
                            min fame<input type="range" name="" min="0" max="2">
                        </p>
                        <p>
                            max fame<input type="range" name="max_fame" min="3" max="6">
                        </p>
                        <p><input type="submit" value="submit"></p>
                    </form>
                </div>
            </div>


            <div class="col-sm">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Handle</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%users.forEach(user => {%>
                        <tr onclick="window.location='/details?user=<%=user.username%>';">
                            <td><%=user.username%></td>
                            <td><%=user.lastname%></td>
                            <td><%=user.firstname%></td>
                        </tr>
                        <%})%>
                        </tbody>
                    </table>
                </div>
            </div>    
        </div>
    </div>
  <!-- footer -->
  <%- include('helpers/footer'); -%>
</body>

</html>